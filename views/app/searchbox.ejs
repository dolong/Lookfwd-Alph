 <div class="clearfix fullwidth" style="margin-top: -14px;background-color: #fff;">
					<div class="input-group">
					  <div class="input-group-btn" >
						<input class="search-large" placeholder="Search Titles" id="searchForm" type="text">
						<input type="hidden" id="type" value="title">
						<button class="btn dropdown-toggle" data-toggle="dropdown" type="button" style="
							margin-top: 8px;
							margin-left: -110px;
							background: #fff;
							border-radius: 4px;
							color: #ccc;
						">Title
						<span class="caret grey"></span>
						</button>
						<button id="go" class="btn btn-default" type="button" style="
							padding: 14px;
							margin-top: 10px;
							border-radius: 4px;
							border-bottom-left-radius: 0;  border-top-left-radius: 0;  };
						">Go</button>
					</div>
                    </div>
 </div>
			  <script>
			  $('#searchForm').autocomplete(
{
    search: function () {},
    source: function (request, response)
    {
        $.ajax(
        {
            url: 'autocomplete',
            dataType: "json",
            data:
            {
                term: request.term
            },
            success: function (data)
            {
                response(data);
            }
        });
    },
    minLength: 2,
      open: function() {
        $( this ).removeClass( "ui-corner-all" ).addClass( "ui-corner-top" );
      },
      close: function() {
        $( this ).removeClass( "ui-corner-top" ).addClass( "ui-corner-all" );
      }
});
			  </script>